<!DOCTYPE html>

<a href="{{ path('app_quiz_c_r_u_d_index') }}"><button class="adminSection">back to list</button></a>
<a href=""><button class="adminSection">history</button></a>

<title>Quiz</title>

{% block body %}
    <h1>Quiz</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quiz.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ quiz.title }}</td>
            </tr>
            <tr>
                <th>Creator</th>
                <td>{{ quiz.user.username }}</td>
            </tr>
            <tr>
                <th>CreatedDate</th>
                <td>{{ quiz.createdDate ? quiz.createdDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>


    {{ include('quiz_crud/_delete_form.html.twig') }}



    <!-- récupérer les questions du quiz associé a cette id -->
    <h2>Quiz questions</h2>
    <table class="table">
        {% for question in quiz.questions %}
            {% if question.quiz.id == quiz.id %}
                <tr>
                    <th>Question's number</th>
                    <th>Question's name</th>
                </tr>
                <tr>
                    <!-- numéro de la question dans le quiz -->
                    <td>{{ loop.index }}</td>
                    <!-- nom de la question -->
                    <td>{{ question.label }}</td>
                </tr>
            {% endif %}
        {% else %}
            <p>No questions for this quiz</p>
        {% endfor %}
    </table>



{% endblock %}
