{% block css %}<link rel="stylesheet" href="{{ asset("css/admin.css") }}">{% endblock %}

<!DOCTYPE html>

<title>Quiz index</title>
<!-- lien de retour vers l'accueil admin -->
<a href="{{ path('admin') }}" class="goBack"><button>Go back to admin menu</button></a>

<h1>Quiz index</h1>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Creator</th>
        <th>CreatedDate</th>
        <th>Numbers of questions</th>
        <th>Actions</th>
        <th>Delete Quiz</th>
    </tr>
    </thead>
    <tbody>
    {% for quiz in quizs %}
        <tr>
            <td>{{ quiz.id }}</td>
            <td>{{ quiz.title }}</td>
            <td>{{ quiz.user.username }}</td>
            <td>{{ quiz.createdDate ? quiz.createdDate|date('Y-m-d') : '' }}</td>
            <td>{{ quiz.questions|length }}</td>
            <td>
                <!-- afficher les infos du quiz -->
                <a href="{{ path('app_quiz_c_r_u_d_show', {'id': quiz.id}) }}"><button class="adminSection">show</button></a>
                <!-- afficher l'historique du quiz -->
                <a href=""><button class="adminSection">history</button></a><!-- historique a mettre en place -->
            </td>
            <td>{{ include('quiz_crud/_delete_form.html.twig') }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>