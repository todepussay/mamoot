{% extends "layout.html.twig" %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/error.css') }}"> {# Assurez-vous que le nom du fichier CSS est correct #}
{% endblock %}

{% block main %}
    <div class="error_container">
        {% if status_code == 404 %}
            <img src="{{ asset('img/error.png') }}" alt="404 Not Found" class="img-fluid">
            <div class="error-text">
                <h1>404</h1>
                <h2>Page non trouvée</h2>
                <p>Nous sommes désolés, mais la page que vous recherchez n'existe pas.</p>
            </div>
        {% elseif status_code == 500 %}
            <img src="{{ asset('img/error.png') }}" alt="500 Internal Server Error" class="img-fluid">
            <div class="error-text">
                <h1>500</h1>
                <h2>Erreur interne du serveur</h2>
                <p>Un problème inattendu est survenu. Veuillez réessayer plus tard.</p>
            </div>
        {% else %}
            <img src="{{ asset('img/error.png') }}" alt="Erreur" class="img-fluid"> {# Image générique pour les autres erreurs #}
            <div class="error-text">
                <h1>{{ status_code }}</h1>
                <h2>Une erreur est survenue</h2>
                <p>Le code d'erreur est : {{ status_code }}.</p>
                {% if status_code == 403 %}
                    <p>Vous n'avez pas la permission d'accéder à cette page.</p>
                {% elseif status_code == 401 %}
                    <p>Vous devez être connecté pour accéder à cette page.</p>
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %}